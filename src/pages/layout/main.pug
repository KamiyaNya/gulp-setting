include ../mixins/style
include ../mixins/js
include ../mixins/jsvendors
include ../mixins/img

block variables

doctype html
html
  head
    title #{title}
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    block styles
      +style('common.css')
  body
    .content
      include ../partials/header.pug
      block content
    include ../partials/footer.pug
    +jsvendors('jquery/jquery-3.6.0.min.js')
    +js('common.js')
    block scripts
